generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum EmployeeStatus {
  Active
  Inactive
  OnLeave
  NoticePeriod
}

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  userName   String   @unique
  email      String   @unique
  name       String
  password   String
  authToken  String?
  resetToken String
  MFAKey     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("User")
}

model Employee {
  id        String         @id @default(auto()) @map("_id") @db.ObjectId
  userId    String         @db.ObjectId
  salary    Float
  position  String
  role      String
  status    EmployeeStatus
  upId      String         @db.ObjectId
  hiredAt   DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  downId    String[]       @db.ObjectId
  projects  String[]?

  @@map("Employee")
}

enum Status {
  Active
  Inactive
  Completed
  Archieved
  Discarded
}

model Project {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  thumbnail     String
  desc          String?
  projectName   String
  budget        Float
  projectStatus Status   @default(Inactice)
  Manager       String   @db.ObjectId
  teamLead      String   @db.ObjectId
  team          String[] @db.ObjectId
  createdAt     DateTime
}

model Applicant {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  userId     String    @db.ObjectId
  appliedFor String
  references String[]?
}
